<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background_white"
    android:orientation="vertical"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/nombre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="nombre"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/categoria"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:padding="4dp"
            android:text="#categoria"
            android:textColor="@color/Icverde"
            android:textSize="20sp" />

    </LinearLayout>
    <View 
       android:layout_width="fill_parent"
       android:layout_height="2dp" 
       android:background="@color/Icazul"
        
        />
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp" >

     <ImageView
         android:id="@+id/ic_descripcion"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="0"
         android:src="@drawable/ic_description" />

    <TextView
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_marginTop="2dp"
        android:padding="4dp"
        android:text="textooooooooooooooooooooooooooooooooooooooooooooooooooooooooo"
        android:textSize="16sp"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_gravity="center_vertical"
        android:ellipsize="end" />
</LinearLayout>
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp" >

     <ImageView
         android:id="@+id/imreloj"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="0"
         android:src="@drawable/ic_reloj"
         android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/hora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:padding="4dp"
        android:text="10:00 a 16:00"
        android:textSize="24sp"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_gravity="center_vertical" />

    <ToggleButton
        android:id="@+id/activo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:textSize="14sp"
        android:layout_weight="0"
         />

</LinearLayout>

<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_gravity="center" >

    
        <TextView
            android:id="@+id/lunes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/monday"
            android:layout_weight="1"
            android:textSize="18sp"
             />
        
        <TextView
            android:id="@+id/martes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/tuesday"
            android:layout_weight="1"
            android:textSize="18sp"
             />
        <TextView
            android:id="@+id/miercoles"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/wednesday"
            android:layout_weight="1"
            android:textSize="18sp"
             />
        <TextView
            android:id="@+id/jueves"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/thursday"
            android:layout_weight="1"
            android:textSize="18sp"
             />
        <TextView
            android:id="@+id/viernes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/fryday"
            android:layout_weight="1"
            android:textSize="18sp"
             />
        <TextView
            android:id="@+id/sabado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/saturday"
            android:layout_weight="1"
            android:textSize="18sp"
             />
        
           <TextView
            android:id="@+id/domingo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/sunday"
            android:layout_weight="1"
            android:textSize="18sp"
             />
 
</LinearLayout>
 
 
 
</LinearLayout>